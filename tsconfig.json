{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "dist",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "strict": true /* Enable all strict type-checking options. */,
    "esModuleInterop": true
  },
  "include": ["src/**/*"]
}
